snippet mct
	create_table :${1} do |t|
		t.${2:type}    ${3:column}
	end
snippet mac
	add_column :${1:model}, :${2:column}, :${3:type}
snippet mfk
	add_foreign_key :${1}, :${2}, column: ${3}
snippet mi
	add_index :${1}, :${2}
snippet bt
	belongs_to :${1}
snippet hm
	has_many :${1}
snippet ivc
	@${1} ||= ${2}
